# Environment configuration
environment = "dev"
aws_region  = "us-east-1"
app_name    = "postcard"

# Container image (update after pushing to ECR)
container_image = "your-account-id.dkr.ecr.us-east-1.amazonaws.com/postcard-dev-server:latest"

# EC2 configuration
instance_type = "t3.micro"
key_name      = null  # Set to your EC2 key pair name if you want SSH access

# Auto Scaling configuration
min_capacity     = 1
max_capacity     = 3
desired_capacity = 1

# ECS Task configuration
task_cpu         = 256
task_memory      = 512
container_memory = 512

# Service configuration
service_desired_count = 1
log_retention_days    = 7

# Environment variables for the container
container_environment_variables = [
  {
    name  = "DYNAMODB_TABLE_NAME"
    value = "postcard-dev-dynamodb"
  },
  {
    name  = "AWS_DEFAULT_REGION"
    value = "us-east-1"
  },
  {
    name  = "COGNITO_REGION"
    value = "us-east-1"
  },
  {
    name  = "COGNITO_USER_POOL_ID"
    value = "us-east-1_CtGUi9QSf"
  },
  {
    name  = "COGNITO_CLIENT_ID"
    value = "7ek7s1ujemu1uollcsj2usn3uf"
  }
]
